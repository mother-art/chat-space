%body
.main
  .main-header
    .main-header__left 
      .main-header__left__group_name 
        = @group.name
      .main-header__left__list
        %ul.main-header__left__list__item Menber :
        - @group.users.each do |user|
          .main-header__left__list__names 
            = user.name
    .main-header__right
      = link_to edit_group_path(@group) do
        %p.edit Edit
  .messages
    = render @messages

  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'メッセージを入力'
        = f.label :image, class: 'input-box__image' do
          = icon('far','image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'