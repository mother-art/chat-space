%body
.side
  .side_header
    .side_header__in
      .side_header__in__user_name 
        = current_user.name
      .side_header__in__item 
        .pen
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        .gear
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。
      